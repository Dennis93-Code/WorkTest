<!-- sports_management/views/sports_team_views.xml -->
<odoo>
    <!-- Sports Team Tree View -->
    <record id="view_sports_team_tree" model="ir.ui.view">
        <field name="name">sports.team.tree</field>
        <field name="model">sports.team</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="coach"/>
            </tree>
        </field>
    </record>

    <!-- Sports Team Form View -->
    <record id="view_sports_team_form" model="ir.ui.view">
        <field name="name">sports.team.form</field>
        <field name="model">sports.team</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="coach"/>
                </group>
            </form>
        </field>
    </record>
</odoo>
