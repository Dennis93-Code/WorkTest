<!-- sports_management/views/sports_player_views.xml -->
<odoo>
    <!-- Sports Player Tree View -->
    <record id="view_sports_player_tree" model="ir.ui.view">
        <field name="name">sports.player.tree</field>
        <field name="model">sports.player</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="age"/>
                <field name="position"/>
                <field name="team_id"/>
            </tree>
        </field>
    </record>

    <!-- Sports Player Form View -->
    <record id="view_sports_player_form" model="ir.ui.view">
        <field name="name">sports.player.form</field>
        <field name="model">sports.player</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="age"/>
                    <field name="position"/>
                    <field name="team_id"/>
                </group>
            </form>
        </field>
    </record>
</odoo>
