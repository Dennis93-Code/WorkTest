<!-- sports_management/views/sports_event_views.xml -->
<odoo>
    <!-- Sports Event Tree View -->
    <record id="view_sports_event_tree" model="ir.ui.view">
        <field name="name">sports.event.tree</field>
        <field name="model">sports.event</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>
                <field name="location"/>
            </tree>
        </field>
    </record>

    <!-- Sports Event Form View -->
    <record id="view_sports_event_form" model="ir.ui.view">
        <field name="name">sports.event.form</field>
        <field name="model">sports.event</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="location"/>
                    <field name="description"/>
                </group>
            </form>
        </field>
    </record>
</odoo>
